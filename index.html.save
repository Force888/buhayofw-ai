<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>BuhayOFW AI</title>
  
</head>
<body>
  <div class="wrap">
    <h1 style="margin:0 0 12px 0;">BuhayOFW AI</h1>
    <div class="card">
      <label for="q" class="muted">Ask a question (Tagalog or English):</label>
      <textarea id="q" placeholder="Halimbawa: Ano ang dapat gawin kapag masakit ang binti habang naglalakad?"></textarea>
      <div class="row">
        <button id="send" class="btn">Send</button>
        <span id="status" class="muted"></span>
      </div>
      <div id="out" class="out"></div>
	<div class="row" style="margin-top:10px;">
  <button id="follow" class="btn" type="button" disabled>Follow-up</button>
  <button id="newq" class="btn" type="button" disabled>New question</button>
</div>

      <div class="muted">Next step: connect this UI to <code>/ask</code>.</div>
    </div>
  </div>

<script>
  const q = document.getElementById('q');
  const out = document.getElementById('out');
  const btn = document.getElementById('send');
  const status = document.getElementById('status');
const followBtn = document.getElementById('follow');
const newBtn = document.getElementById('newq');

function setPostAnswerActionsEnabled(enabled) {
  followBtn.disabled = !enabled;
  newBtn.disabled = !enabled;
}

// Follow-up: just focus textbox and put cursor at end
followBtn.addEventListener('click', () => {
  q.focus();
  q.setSelectionRange(q.value.length, q.value.length);
});

// New question: clear textbox and focus
newBtn.addEventListener('click', () => {
  q.value = "";
  q.focus();
});

  function setBusy(busy, msg="") {
    btn.disabled = busy;
    status.textContent = msg;
  }

let isLoading = false;
let abortController = null;

async function send() {
  if (isLoading) return;

  const text = q.value.trim();
  if (!text) return;

  // Abort any previous in-flight request
  if (abortController) abortController.abort();
  abortController = new AbortController();

  isLoading = true;
  out.textContent = "Sending...";
  setBusy(true, "Working...");
  setPostAnswerActionsEnabled(false);

  try {
    const resp = await fetch("/ask", {
      method: "POST",
      headers: { "Content-Type": "application/json" },
      body: JSON.stringify({ question: text }),
      signal: abortController.signal,
    });

    const data = await resp.json();

    if (!resp.ok) {
      out.textContent = "Error: " + (data.error || "Request failed");
    } else {
      out.textContent = data.answer || "(No answer returned)";
    setPostAnswerActionsEnabled(true);
    }
  } catch (err) {
    if (err.name === "AbortError") return;
    out.textContent = "Network error: " + err.message;
  } finally {
    isLoading = false;
    setBusy(false, "");
  }
}

  btn.addEventListener('click', send);
  q.addEventListener('keydown', (e) => {
  if (isLoading) return;
  if (e.key === 'Enter' && (e.ctrlKey || e.metaKey)) send();
});

</script>
</body>
</html>
